extends layout.pug

block content
    .row
        .col-md-12
            h2= image.title
            img.img-rounded.img-responsive(src=image.url onerror="this.onerror=null;this.src='/public/img/noimage.jpg';")
        .col-md-12
            if owned
                a(href=`/images/${image._id}/delete`) #[button.btn.btn-danger Delete]
